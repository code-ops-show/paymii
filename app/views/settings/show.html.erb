<%= content_for :context_nav do %>
  <div class='row-fluid'>
    <div class='col-md-4'>
      <%= link_with_icon 'Back', :back, 'arrow-left' %>
    </div>
    <div class='col-md-4 center'>
      <h1>System Settings</h1>
    </div>
    <div class='col-md-4 right'>
    </div>
  </div>
<% end %>

<div class='row'>
  <div class='col-xs-3'>
    <div class='list-group'>
      <% @configurables.each do |c| %>
        <%= link_to c.name, settings_path(c.slug), class: 'list-group-item' %>
      <% end %>
    </div>
  </div>
  <div class='col-xs-9'>
    <div class='single-card-container card'>
      <div class='display-horizontal'>
        <% @configurables.each do |configurable| %>
          <h2><%= configurable.name %></h2>
          <% configurable.settings.each do |k, v| %>
            <div class='form-group display-row row'>
              <div class='col-xs-3'>
                <%= label_tag k, k.titleize %>
              </div>
              <div class='col-xs-9'>
                <div class='form-control'>
                  <%= v %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>




